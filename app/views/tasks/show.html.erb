<h1><%= @task.title %></h1>

<%= link_to "Edit this task", tasks_edit_path(@task) %>

<%= @task.details %>

<ul>
<% if @task.completed %>
  <li><%= "This task is completed" %></li>
  <% else %>
  <li><%= "This task is not completed" %></li>
<% end %>
</ul>

<%= link_to "Back to list", tasks_path %>
